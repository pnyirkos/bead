{% extends 'master' %}

{% block content %}
<h1>Meccs módosítása</h1>

{% if old('errors') %}
<div class="alert alert-danger" role="alert">
    <ul>
    {% for error in old('errors') %}
    <li>{{ error.message }}</li>
    {% endfor %}
    </ul>
</div>
{% endif %}

 <form class="form-horizontal" action="/match/{{ match.id }}/edit" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">Meccs neve</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputName" name="name" value="{{ match.name }}">
    </div>
  </div>

    <div class="form-group">
    <label for="inputFirstComp" class="col-sm-2 control-label">Első Versenyző</label>
    <div class="col-sm-10">
      <select class="form-control" id="inputFirstComp" name="firstComp">
        {% for competitor in competitors %}
        {% if competitor.id == match.firstcomp_id %}
        <option selected value="{{ competitor.id }}">{{ competitor.firstname }} {{ competitor.laststname }}</option>
        {% else %}
        <option value="{{ competitor.id }}">{{ competitor.firstname }} {{ competitor.laststname }}</option>
        {% endif %}
        {% endfor %}
      </select>
    </div>
    </div>

    <div class="form-group">
    <label for="inputSecondComp" class="col-sm-2 control-label">Második Versenyző</label>
    <div class="col-sm-10">
      <select class="form-control" id="inputSecondComp" name="secondComp">
        {% for competitor in competitors %}
        {% if competitor.id == match.secondcomp_id %}
        <option selected value="{{ competitor.id }}">{{ competitor.firstname }} {{ competitor.laststname }}</option>
        {% else %}
        <option value="{{ competitor.id }}">{{ competitor.firstname }} {{ competitor.laststname }}</option>
        {% endif %}
        {% endfor %}
      </select>
    </div>
    </div>

    <div class="form-group">
    <label for="inputWinner" class="col-sm-2 control-label">Győztes</label>
    <div class="col-sm-10">
      <select class="form-control" id="inputWinner" name="winner">
        {% for competitor in competitors %}
        {% if competitor.id == match.winner_id %}
        <option selected value="{{ competitor.id }}">{{ competitor.firstname }} {{ competitor.laststname }}</option>
        {% else %}
        <option value="{{ competitor.id }}">{{ competitor.firstname }} {{ competitor.laststname }}</option>
        {% endif %}
        {% endfor %}
      </select>
    </div>
    </div>

    <div class="form-group">
    <label for="inputSecondComp" class="col-sm-2 control-label">Bíró</label>
    <div class="col-sm-10">
      <select class="form-control" id="inputRef" name="ref">
        {% for ref in referees %}
        {% if ref.id == match.ref_id %}
        <option selected value="{{ ref.id }}">{{ ref.name }}</option>
        {% else %}
        <option value="{{ ref.id }}">{{ ref.name }}</option>
        {% endif %}
        {% endfor %}
      </select>
    </div>
    </div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Meccs Felvitele</button>
    </div>
  </div>

</form>

{% endblock %}