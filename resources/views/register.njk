{% extends 'master' %}

{% block content %}

<h1>Regisztráció</h1>

{% if old('errors') %}
<div class="alert alert-danger" role="alert">
    <ul>
    {% for error in old('errors') %}
    <li>{{ error.message }}</li>
    {% endfor %}
    </ul>
</div>
{% endif %}

<form data-toggle="validator" class="form-horizontal" action="/register" method="POST" id="registerForm">
  {{ csrfField }}
  <div class="form-group has-feedback">
    <label for="inputEmail" class="col-sm-2 control-label">E-mail cím</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="inputEmail" name="email" value="{{ old('email') }}"
      pattern="\S+@\S+" required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="inputName" class="col-sm-2 control-label">Megjelenítendő név</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputName" name="name" value="{{ old('name') }}" required
      pattern="^[_A-z0-9]{1,}$">
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="inputPassword" class="col-sm-2 control-label">Jelszó</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPassword" name="password" required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <label for="inputPasswordAgain" class="col-sm-2 control-label">Jelszó megint</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputPasswordAgain" name="password_again" data-match="#inputPassword" data-match-error="A két jelszó nem egyezik." required >
       <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group has-feedback">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Mehet</button>
    </div>
  </div>
</form>

{% endblock %}

{% block scripts %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/1000hz-bootstrap-validator/0.11.5/validator.min.js"></script>
{% endblock %}   